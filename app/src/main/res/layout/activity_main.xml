<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">


    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/lion"
        android:layout_weight="1"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Best Zoo Out There!"
            style="@style/Base.TextAppearance.AppCompat.Display1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="We have all sorts of animals. With different weights and they also make different sounds. So naturally you cannot resist but to theck out what's making what noise!"
            style="@style/TextAppearance.AppCompat.Medium"/>

        <Button
            android:onClick="goCategories"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="See What Animals we Got!"
            style="@style/Base.Widget.AppCompat.ActionButton"/>

    </LinearLayout>


</LinearLayout>